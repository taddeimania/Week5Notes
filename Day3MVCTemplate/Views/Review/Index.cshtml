@model IEnumerable<Day3MVCTemplate.Models.Review>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12 text-center">
            @foreach (var review in Model)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@review.ReviewerName</h3>
                    </div>
                    <div class="panel-body">@review.Message</div>
                    <h4>@review.Rating</h4>
                </div>
            }
        </div>
    </div>
</div>